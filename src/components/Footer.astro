<script>
    const copyrightYear = document.getElementById("year");

    copyrightYear.textContent = new Date().getFullYear().toString();

    function rearrangement() {
        if (window.innerWidth < 767) {
            const aboutLinks = document.querySelectorAll(".about ul li a");
            const div = document.querySelector(".help");

            for (const link of aboutLinks) {
                div.appendChild(link);
            }

            document.querySelector(".nav-list").appendChild(div);
        } else {
            const helpLinks = document.querySelectorAll(".help a");
            const liPlaceholders = document.querySelectorAll(".about ul li");

            for (let i = 0; i < liPlaceholders.length; i++) {
                liPlaceholders[i].appendChild(helpLinks[i]);
            }
        }
    }

    document.addEventListener("DOMContentLoaded", rearrangement);
    window.addEventListener("resize", rearrangement);
</script>

<style>
    footer {
        grid-column: 1 / 4;
        grid-row: 3 / 4;

        background-color: #130c0d;

        display: grid;
        grid-template-columns: auto 1fr auto;

        & .row {
            grid-column: 2 / 3;

            &.info {
                grid-row: 1 / 2;

                display: none;
            }

            &.credits {
                grid-row: 2 / 3;

                display: flex;
                flex-direction: column-reverse;
                justify-content: space-between;
                align-items: center;

                gap: 1rem;

                padding-block: 1rem;

                & article:not(.social) {
                    & p {
                        & i {
                            font-size: 0.8rem;
                            margin-right: 0.1rem;
                        }
                    }
                }

                & .social {
                    width: 40%;

                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;

                    & a {
                        display: block;

                        & i {
                            font-size: 1.5rem;
                        }
                    }
                }
            }
        }

        & a {
            color: white;
            text-decoration: none;
        }
    }

    @media (767px < width) {
        footer {
            & .row {
                &.info {
                    display: grid;
                    grid-template-columns: repeat(3, 1fr);
                    justify-items: center;
                    align-items: self-start;

                    grid-auto-flow: column;
                    grid-auto-columns: 1fr;

                    padding-block: 1rem;

                    & ul li {
                        list-style: none;
                    }

                    & .xtra-nav {
                        display: none;
                    }

                    & article {
                        display: flex;
                        flex-direction: column;
                        gap: 0.5rem;
                    }
                }

                &.credits {
                    flex-direction: row;

                    padding-inline: 1.5rem;

                    & .social {
                        width: 15%;

                        & a {
                            & i {
                                font-size: 1.25rem;
                            }
                        }
                    }
                }
            }
        }
    }

    @media (1023px < width) {
        footer {
            & .row {
                &.info {
                    & .xtra-nav {
                        display: flex;
                    }
                }

                &.credits {
                    padding-inline: 3rem;

                    & .social {
                        width: 10%;
                    }
                }
            }
        }
    }
</style>
