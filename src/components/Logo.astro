---
const { type } = Astro.props;
---

<figure>
    <img
        src="/full-print-web/images/logo.webp"
        alt="Full Print logo"
        width="150"
        height="150"
        loading="lazy"
    />
    <figcaption>
        {type === "header" ? <h1>Full Print</h1> : <h2>Full Print</h2>}
        <p>Tu lugar de impresi√≥n</p>
    </figcaption>
</figure>

<style>
    figure {
        padding-block: 0.75rem;

        display: flex;
        align-items: center;
        gap: 0.4rem;

        & img {
            width: calc(368px / 9);
            height: auto;
        }

        & figcaption {
            display: flex;
            flex-direction: column;
            justify-content: center;

            & h1 {
                font-size: x-large;
            }

            & h2 {
                font-size: larger;
            }

            & p {
                font-size: smaller;
            }
        }
    }
</style>
